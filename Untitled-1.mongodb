
use('Food');

var total = db.restaurant.count();


db.restaurant.aggregate(
    [
        { $group: { "_id": {"OwnerGender":"$OwnerGender"}, "count": { "$sum": 1 }}},    
        { "$project": { 
            "count": 1, 
            "percentage": { 
                "$concat": [ { "$substr": [ { "$multiply": [ { "$divide": [ "$count", {"$literal": total }] }, 100 ] }, 0,6 ] }, "", "%" ]}
            }
        }
    ]
);

